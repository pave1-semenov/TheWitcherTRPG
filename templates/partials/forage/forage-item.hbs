{{#if item.system.isHidden}}
    {{#if isGM}}
        <tr class="item hidden-view" data-item-id="{{item._id}}">
    {{else}}
        <tr class="item hidden-from-view" data-item-id="{{item._id}}">
    {{/if}}
{{else}}
    <tr class="item" data-item-id="{{item._id}}">
{{/if}}
    <td><a data-action="editItem"><i class="fas fa-edit"></i></a></td>
    <td><img src="{{item.img}}" class="item-img dragable" draggable="true" data-id="{{item._id}}"/></td>
    <td><input class="inline-edit" data-field="system.quantityObtainable" type="text"
               value="{{item.system.quantityObtainable}}"/></td>
    <td><input class="inline-edit" data-field="name" type="text" value="{{item.name}}" placeholder="name"/></td>
    <td><input class="inline-edit" data-field="system.rarity" type="text" value="{{item.system.rarity}}"
               placeholder=""/></td>
    <td><input class="inline-edit" data-field="system.forage" type="text" value="{{item.system.forage}}"
               data-dtype="Number"/></td>
    <td><a class="item-forage" data-action="forage"><i class="fas fa-coins"></i></a>
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
        {{#if isGM}}
            <a class="item-hide"><i class="fas fa-eye"></i></a>
        {{/if}}
    </td>
</tr>